{
  "name": "LetMeKnowWhen",
  "private": true,
  "engines": {
    "node": ">=25.6.0"
  },
  "packageManager": "pnpm@10.5.2",
  "version": "0.1.0",
  "dependencies": {
    "@rails/actioncable": "^8.1.200",
    "@rails/activestorage": "^8.1.200",
    "@rails/ujs": "~7.1.600",
    "turbolinks": "^5.2.0"
  },
  "//": [
    "postcss is a dep of stylelint-config-standard-scss, can probably be removed later"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/rails__actioncable": "^6.1.11",
    "@types/rails__activestorage": "^8.0.1",
    "@types/rails__ujs": "^6.0.4",
    "@types/turbolinks": "^5.2.2",
    "esbuild": "^0.25.6",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jest-junit": "^16.0.0",
    "jest-util": "^30.0.5",
    "postcss": "^8.5.6",
    "stylelint": "^15.11.0",
    "stylelint-config-standard-scss": "^11.1.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3"
  },
  "scripts": {
    "build": "esbuild app/javascript/*.* --bundle --sourcemap --format=iife --outdir=app/assets/builds --public-path=/assets",
    "eslint": "eslint ./ --cache --max-warnings=0",
    "eslint_find_unused_rules": "eslint-find-rules --unused --flatConfig --no-core eslint.config.mts",
    "pretest": "pnpm tscheck && pnpm eslint",
    "stylelint": "./node_modules/stylelint/bin/stylelint.mjs 'app/assets/stylesheets/**/*'",
    "test": "pnpm vitest run --coverage",
    "tscheck": "tsc --noEmit"
  }
}
