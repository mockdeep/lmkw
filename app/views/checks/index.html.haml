%main
  .header
    %h2 Checks

    = link_to("+ New Check", new_check_path, class: "new-check-btn")

  .checks-list
    - checks.each do |check|
      .check
        %h3
          %span{ class: "fab fa-#{check.service} fa-lg" }
          = check.name
        %p
          %span.check_value= check.last_value
          = link_to(check.url, target: :_blank, rel: :noreferrer) do
            = check.message
            %span.fas.fa-external-link-alt

