!!!
%html
  %head
    %title LetMeKnowWhen
    = csrf_meta_tags
    = csp_meta_tag
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }/

    - stylesheet_options = { media: "all", "data-turbo-track": "reload" }
    - font_awesome = "@fortawesome/fontawesome-free/css/all.min"
    = stylesheet_link_tag(font_awesome, **stylesheet_options)
    = stylesheet_link_tag("application", **stylesheet_options)
    = javascript_include_tag("application", "data-turbo-track": "reload")
    - colors = ["black", "blue", "purple", "orange"]
    = favicon_link_tag("fat-dot-#{colors.sample}.ico")

  - action = "keydown@document->hotkeys#handleKeydown"
  %body{ data: { controller: "hotkeys", action: action } }
    .logo
      = image_tag("LMKW-logo-black.png", height: 100)
      %br
      .title
        Let Me Know When
    .nav
      - if current_user.logged_in?
        = current_user.email
        %br
        = link_to("Account", account_path)
        = button_to("Log Out", session_path, method: :delete)
      - else
        = link_to("Log In", new_session_path)
        = link_to("Sign Up", new_account_path)
      .flashes
        - flash.each do |type, message|
          %div{ class: "flash-#{type}" }= message
    %main
      = yield
